<?xml version="1.0" encoding="utf-8"?>
<!-- item_avion.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background"
    android:orientation="vertical"
    android:padding="6dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/tituloNoticia"
        android:layout_width="194dp"
        android:layout_height="31dp"
        android:text="Titulo-Noticia"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toEndOf="@+id/imagennoticias"
        tools:layout_editor_absoluteY="6dp" />

    <TextView
        android:id="@+id/textNoticia"
        android:layout_width="152dp"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:text="Texto-Noticia"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.274"
        app:layout_constraintStart_toEndOf="@+id/imagennoticias"
        app:layout_constraintTop_toBottomOf="@+id/tituloNoticia" />

    <ImageView
        android:id="@+id/imagennoticias"
        android:layout_width="145dp"
        android:layout_height="125dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>