<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="SpeakableTextPresentCheck"
    android:fillViewport="true"
    android:background="#134161">

    <ImageView
        android:id="@+id/volver"
        android:layout_width="83dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/volver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="95dp"
        android:text="Aeropuertos más destacados"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/volver" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="36dp"
        android:text="Y su información más relevante"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:layout_constraintEnd_toStartOf="@+id/directo"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/directo"
        android:layout_width="60dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="64dp"
        android:background="@drawable/directo"
        android:text="   LIVE"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="103dp" />

    <TextView
        android:id="@+id/info_aero"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:text="      1.Aeropuerto de Barcelona"
        android:textColor="#000000"
        android:textSize="18sp"
        android:background="@drawable/info_aero"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="152dp"
        tools:ignore="MissingConstraints"/>


    <ImageView
        android:layout_width="87dp"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:src="@drawable/BCN_air"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="167dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/info_aero2"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:text="    2. Aeropuerto Paris Charles de Gaulle"
        android:textColor="#000000"
        android:textSize="18sp"
        android:background="@drawable/info_aero"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="259dp"
        tools:ignore="MissingConstraints"/>


    <ImageView
        android:layout_width="87dp"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:src="@drawable/Paris_Air"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="282dp" />

    <TextView
        android:id="@+id/info_aero3"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:text="     3. Casablanca International Airport"
        android:textColor="#000000"
        android:textSize="18sp"
        android:background="@drawable/info_aero"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="366dp"
        tools:ignore="MissingConstraints"/>

    <ImageView
        android:layout_width="87dp"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:src="@drawable/casablanca_air"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="388dp" />

    <ImageView
        android:layout_width="87dp"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:src="@drawable/Paris_Air"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="282dp" />

    <TextView
        android:id="@+id/info_aero4"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:text="     4. Prague Vaclav Havel Airport"
        android:textColor="#000000"
        android:textSize="18sp"
        android:background="@drawable/info_aero"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="476dp"
        tools:ignore="MissingConstraints"/>

    <ImageView
        android:layout_width="87dp"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:src="@drawable/Prague_air"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="498dp" />

    <TextView
        android:id="@+id/info_aero5"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:text="      6. Rome Fiumicino Airport"
        android:textColor="#000000"
        android:textSize="20sp"
        android:background="@drawable/info_aero"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="585dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/info_aero6"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:text="     5. London Heathrow Airport"
        android:textColor="#000000"
        android:textSize="18sp"
        android:background="@drawable/info_aero"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="585dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="87dp"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:src="@drawable/london_air"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="605dp" />


</androidx.constraintlayout.widget.ConstraintLayout>